<xml xmlns="https://developers.google.com/blockly/xml">
  <block type="processing_setup" id="setup" x="20" y="20">
    <statement name="DO">
      <block type="visual_stage_setup" id="super_stage">
        <field name="W">1000</field>
        <field name="H">400</field>
        <field name="BG_COLOR">#000000</field>
        <field name="WAVE_COLOR">#FF0096</field>
        <field name="SHOW_WAVE">TRUE</field>
        <field name="SHOW_SPEC">FALSE</field>
        <field name="SHOW_LOG">TRUE</field>
        <field name="MIDI_IN">0</field>
        <next>
          <block type="audio_load_sample" id="load_kick">
            <field name="NAME">kick</field>
            <field name="PATH">kick.wav</field>
            <next>
              <block type="audio_load_sample" id="load_snare">
                <field name="NAME">snare</field>
                <field name="PATH">snare.wav</field>
                <next>
                  <block type="audio_set_current_sample" id="init_sample">
                    <field name="NAME">kick</field>
                    <next>
                      <block type="ui_set_font_size" id="ui_font">
                        <field name="SIZE">16</field>
                        <next>
                          <block type="ui_add_slider" id="gain_slider">
                            <field name="VAR">masterGain</field>
                            <field name="X">820</field>
                            <field name="Y">130</field>
                            <field name="W">150</field>
                            <field name="H">20</field>
                            <field name="MIN">-40</field>
                            <field name="MAX">6</field>
                            <field name="VAL">-10</field>
                            <field name="LABEL">MASTER GAIN</field>
                            <next>
                              <block type="ui_add_slider" id="scale_slider">
                                <field name="VAR">waveScale</field>
                                <field name="X">820</field>
                                <field name="Y">180</field>
                                <field name="W">150</field>
                                <field name="H">20</field>
                                <field name="MIN">0.5</field>
                                <field name="MAX">10</field>
                                <field name="VAL">2.5</field>
                                <field name="LABEL">WAVE SCALE</field>
                                <next>
                                  <block type="ui_add_toggle" id="midi_toggle">
                                    <field name="VAR">isMidiMode</field>
                                    <field name="X">820</field>
                                    <field name="Y">30</field>
                                    <field name="STATE">TRUE</field>
                                    <field name="LABEL">MIDI MODE</field>
                                  </block>
                                </next>
                              </block>
                            </next>
                          </block>
                        </next>
                      </block>
                    </next>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
  </block>

  <block type="processing_draw" id="draw" x="450" y="20">
    <statement name="DO">
      <!-- 現在這裡變得很空曠，使用者可以加入自己的額外繪圖 -->
    </statement>
  </block>

  <block type="midi_on_note" id="midi_on" x="20" y="550">
    <statement name="DO">
      <block type="controls_if" id="if_kick">
        <value name="IF0">
          <block type="logic_compare">
            <field name="OP">EQ</field>
            <value name="A"><block type="variables_get"><field name="VAR" id="pitch">pitch</field></block></value>
            <value name="B"><block type="math_number"><field name="NUM">60</field></block></value>
          </block>
        </value>
        <statement name="DO0">
          <block type="audio_set_current_sample" id="set_kick">
            <field name="NAME">kick</field>
            <next>
              <block type="audio_trigger_sample" id="trigger_kick">
                <field name="NAME">kick</field>
                <value name="VELOCITY"><block type="variables_get"><field name="VAR" id="velocity">velocity</field></block></value>
              </block>
            </next>
          </block>
        </statement>
        <next>
          <block type="controls_if" id="if_snare">
            <value name="IF0">
              <block type="logic_compare">
                <field name="OP">EQ</field>
                <value name="A"><block type="variables_get"><field name="VAR" id="pitch">pitch</field></block></value>
                <value name="B"><block type="math_number"><field name="NUM">62</field></block></value>
              </block>
            </value>
            <statement name="DO0">
              <block type="audio_set_current_sample" id="set_snare">
                <field name="NAME">snare</field>
                <next>
                  <block type="audio_trigger_sample" id="trigger_snare">
                    <field name="NAME">snare</field>
                    <value name="VELOCITY"><block type="variables_get"><field name="VAR" id="velocity">velocity</field></block></value>
                  </block>
                </next>
              </block>
            </statement>
          </block>
        </next>
      </block>
    </statement>
  </block>
</xml>