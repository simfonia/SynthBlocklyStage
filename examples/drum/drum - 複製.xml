<xml xmlns="https://developers.google.com/blockly/xml">
  <block type="processing_setup" id="setup" x="20" y="20">
    <statement name="DO">
      <block type="visual_stage_setup" id="super_stage">
        <field name="W">1200</field>
        <field name="H">400</field>
        <field name="BG_COLOR">#000000</field>
        <field name="FG_COLOR">#FF0096</field>
        <next>
          <block type="audio_load_sample" id="load_kick">
            <field name="NAME">kick</field>
            <field name="PATH">kick.wav</field>
            <next>
              <block type="audio_load_sample" id="load_snare">
                <field name="NAME">snare</field>
                <field name="PATH">snare.wav</field>
                <next>
                  <block type="audio_set_current_sample" id="init_sample">
                    <field name="NAME">kick</field>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
  </block>

  <block type="processing_draw" id="draw" x="450" y="20">
    <statement name="DO">
    </statement>
  </block>

  <block type="midi_on_note" id="midi_on" x="20" y="550">
    <field name="CHANNEL">channel</field>
    <field name="PITCH">pitch</field>
    <field name="VELOCITY">velocity</field>
    <statement name="DO">
      <block type="controls_if" id="if_kick">
        <value name="IF0">
          <block type="logic_compare">
            <field name="OP">EQ</field>
            <value name="A"><block type="variables_get"><field name="VAR">pitch</field></block></value>
            <value name="B"><block type="math_number"><field name="NUM">57</field></block></value>
          </block>
        </value>
        <statement name="DO0">
          <block type="audio_set_current_sample" id="set_kick">
            <field name="NAME">kick</field>
            <next>
              <block type="audio_trigger_sample" id="trigger_kick">
                <field name="NAME">kick</field>
                <value name="VELOCITY"><block type="variables_get"><field name="VAR">velocity</field></block></value>
              </block>
            </next>
          </block>
        </statement>
        <next>
          <block type="controls_if" id="if_snare">
            <value name="IF0">
              <block type="logic_compare">
                <field name="OP">EQ</field>
                <value name="A"><block type="variables_get"><field name="VAR">pitch</field></block></value>
                <value name="B"><block type="math_number"><field name="NUM">59</field></block></value>
              </block>
            </value>
            <statement name="DO0">
              <block type="audio_set_current_sample" id="set_snare">
                <field name="NAME">snare</field>
                <next>
                  <block type="audio_trigger_sample" id="trigger_snare">
                    <field name="NAME">snare</field>
                    <value name="VELOCITY"><block type="variables_get"><field name="VAR">velocity</field></block></value>
                  </block>
                </next>
              </block>
            </statement>
            <next>
              <block type="controls_if" id="if_synth_on">
                <value name="IF0">
                  <block type="logic_compare">
                    <field name="OP">GTE</field>
                    <value name="A"><block type="variables_get"><field name="VAR">pitch</field></block></value>
                    <value name="B"><block type="math_number"><field name="NUM">60</field></block></value>
                  </block>
                </value>
                <statement name="DO0">
                  <block type="audio_play_note" id="play_synth">
                    <value name="PITCH">
                      <block type="variables_get"><field name="VAR">pitch</field></block>
                    </value>
                    <value name="VELOCITY">
                      <block type="variables_get"><field name="VAR">velocity</field></block>
                    </value>
                  </block>
                </statement>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
  </block>

  <block type="midi_off_note" id="midi_off" x="500" y="550">
    <field name="CHANNEL">channel</field>
    <field name="PITCH">pitch</field>
    <field name="VELOCITY">velocity</field>
    <statement name="DO">
      <block type="controls_if" id="if_synth_off">
        <value name="IF0">
          <block type="logic_compare">
            <field name="OP">GTE</field>
            <value name="A"><block type="variables_get"><field name="VAR">pitch</field></block></value>
            <value name="B"><block type="math_number"><field name="NUM">60</field></block></value>
          </block>
        </value>
        <statement name="DO0">
          <block type="audio_stop_note" id="stop_synth">
            <value name="PITCH">
              <block type="variables_get"><field name="VAR">pitch</field></block>
            </value>
          </block>
        </statement>
      </block>
    </statement>
  </block>
</xml>